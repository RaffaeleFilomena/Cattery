<Window x:Class="UIWPFCattery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWPFCattery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Gatto">
                
            </MenuItem>

            <MenuItem Header="_Adozioni">
                
            </MenuItem>

            <MenuItem Header="_Adottanti">
                
            </MenuItem>
        </Menu>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FFDFDFDF" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="Bold"><Run Text="Totale gatti"/><Run Language="it-it" Text=":"/></TextBlock>
                    <TextBlock x:Name="TxtTotaleGatti" FontSize="32" 
                               HorizontalAlignment="Center" Margin="10" Width="172"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#FFDFDFDF" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="Bold"><Run Text="Maschi"/><Run Language="it-it" Text=":"/></TextBlock>
                    <TextBlock x:Name="TxtMaschi" FontSize="32" 
                               HorizontalAlignment="Center" Margin="10" Width="151"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#FFDFDFDF" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="Bold"><Run Text="Femmine"/><Run Language="it-it" Text=":"/></TextBlock>
                    <TextBlock x:Name="TxtFemmine" FontSize="32" 
                               HorizontalAlignment="Center" Margin="10" Width="162"/>
                </StackPanel>
            </Border>
        </Grid>

    </DockPanel>
</Window>
